;-----------------------------------;
;             Date/Time             ;
;-----------------------------------;

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = "  %a, %b %d, %I:%M %p"
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

;-----------------------------------;
;              Battery              ;
;-----------------------------------;

[module/battery]

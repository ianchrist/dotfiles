bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


;-----------------------------------;
;              Spotify              ;
;-----------------------------------;

; uses playctl package

[module/spotify]
type = custom/script
format-padding = 2
exec = playerctl metadata artist && echo -n ' - ' && playerctl metadata title
tail = true
interval = 2


;-----------------------------------;
;                CPU                ;
;-----------------------------------;
[module/cpu]
type = internal/cpu

interval = 2
label-background = ${colors.background-mod0}
label-padding = 2
label =  %percentage%%

;-----------------------------------;
;               Memory              ;
;-----------------------------------;
[module/memory]
type = internal/memory

interval = 2
label-background = ${colors.background-mod3}
label-padding = 2
label =  %percentage_used%%


;-----------------------------------;
;           Sound Control           ;
;-----------------------------------;
[module/play]
type = custom/script
exec = echo 
label-padding = 2
click-left = playerctl play-pause --player=spotify
label-background = ${colors.background-mod4}

[module/next]
type = custom/script
exec = echo 
label-padding = 2
click-left = playerctl next --player=spotify
label-background = ${colors.background-mod4}

[module/back]
type = custom/script
exec = echo 
label-padding = 2
click-left = playerctl previous --player=spotify
label-background = ${colors.background-mod4}

[module/track_for]
type = custom/script
exec = echo 
label-padding = 0
click-left = playerctl 10+
label-background = ${colors.background-mod4}

[module/track_back]
type = custom/script
exec = echo 
label-padding = 0
click-left = playerctl 10-
label-background = ${colors.background-mod4}
;------------END MODULES-----------;


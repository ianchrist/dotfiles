;-----------------------------------;
;           i3 Screen Bar           ;
;-----------------------------------;

[module/i3]
type = internal/i3
label-unfocused-background = ${colors.background-unf}

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
